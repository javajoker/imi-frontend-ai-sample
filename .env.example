# =============================================================================
# IP MARKETPLACE FRONTEND ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.local and update the values for your environment
# Never commit .env.local to version control

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API base URL
# Development: http://localhost:3001/api/v1
# Production: https://api.yourdomain.com/api/v1
VITE_API_URL=http://localhost:3001/api/v1

# API timeout in milliseconds
VITE_API_TIMEOUT=10000

# Use mock data instead of real API (true/false)
# Set to 'true' for development when backend is not available
# Set to 'false' for production
VITE_USE_MOCK_DATA=true

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application name displayed in UI
VITE_APP_NAME=IMI

# Application version (auto-filled by build process)
VITE_VERSION=1.0.0

# Default language (en, zh-TW)
VITE_DEFAULT_LANGUAGE=en

# Application environment (development, staging, production)
VITE_ENVIRONMENT=development

# Support email for contact forms
VITE_SUPPORT_EMAIL=support@ipmarketplace.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable demo mode with user type switcher (true/false)
# Should be 'false' in production
VITE_ENABLE_DEMO_MODE=true

# Enable user type switching in demo mode (true/false)
VITE_ENABLE_USER_SWITCHING=true

# Enable analytics tracking (true/false)
VITE_ENABLE_ANALYTICS=false

# Enable Progressive Web App features (true/false)
VITE_ENABLE_PWA=true

# Enable real-time notifications (true/false)
VITE_ENABLE_REAL_TIME_NOTIFICATIONS=false

# Enable social login options (true/false)
VITE_ENABLE_SOCIAL_LOGIN=false

# Enable cryptocurrency payments (true/false)
VITE_ENABLE_CRYPTO_PAYMENTS=false

# Enable real payment gateway features (true/false)
VITE_ENABLE_PAYMENTS=false

# Enable realtime notification features (true/false)
VITE_ENABLE_NOTIFICATIONS=false

# Enable advanced search features (true/false)
VITE_ENABLE_ADVANCED_SEARCH=true

# =============================================================================
# AUTHENTICATION
# =============================================================================

# JWT token expiration time in seconds (default: 24 hours)
VITE_TOKEN_EXPIRATION=86400

# Refresh token expiration time in seconds (default: 7 days)
VITE_REFRESH_TOKEN_EXPIRATION=604800

# Enable remember me functionality (true/false)
VITE_ENABLE_REMEMBER_ME=true

# Session timeout in minutes (default: 30 minutes)
VITE_SESSION_TIMEOUT=30

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# Google Analytics tracking ID (optional)
VITE_GA_TRACKING_ID=

# Google Maps API key (for location features)
VITE_GOOGLE_MAPS_API_KEY=

# Stripe publishable key (for payments)
VITE_STRIPE_PUBLISHABLE_KEY=

# PayPal client ID (for payments)
VITE_PAYPAL_CLIENT_ID=

# Cloudinary cloud name (for image uploads)
VITE_CLOUDINARY_CLOUD_NAME=

# Sentry DSN (for error tracking)
VITE_SENTRY_DSN=

# Intercom app ID (for customer support)
VITE_INTERCOM_APP_ID=

# Hotjar site ID (for user analytics)
VITE_HOTJAR_SITE_ID=

# =============================================================================
# BLOCKCHAIN INTEGRATION
# =============================================================================

# Blockchain network (mainnet, testnet, localhost)
VITE_BLOCKCHAIN_NETWORK=testnet

# Ethereum node URL (Infura, Alchemy, etc.)
VITE_ETHEREUM_NODE_URL=

# Contract addresses
VITE_IP_AUTHORIZATION_CONTRACT_ADDRESS=
VITE_MARKETPLACE_CONTRACT_ADDRESS=

# IPFS gateway URL
VITE_IPFS_GATEWAY_URL=https://ipfs.io/ipfs/

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================

# Maximum file size for uploads in bytes (default: 10MB)
VITE_MAX_FILE_SIZE=10485760

# Allowed file types for IP assets (comma-separated)
VITE_ALLOWED_IP_FILE_TYPES=image/jpeg,image/png,image/svg+xml,video/mp4,audio/mpeg

# Allowed file types for product images (comma-separated)
VITE_ALLOWED_PRODUCT_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Maximum number of files per upload
VITE_MAX_FILES_PER_UPLOAD=10

# =============================================================================
# UI/UX SETTINGS
# =============================================================================

# Default items per page for listings
VITE_DEFAULT_PAGE_SIZE=20

# Maximum items per page
VITE_MAX_PAGE_SIZE=100

# Enable infinite scroll (true/false)
VITE_ENABLE_INFINITE_SCROLL=false

# Default theme (light, dark, auto)
VITE_DEFAULT_THEME=light

# Enable theme switching (true/false)
VITE_ENABLE_THEME_SWITCHING=false

# Animation duration in milliseconds
VITE_ANIMATION_DURATION=300

# Enable reduced motion support (true/false)
VITE_ENABLE_REDUCED_MOTION=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable development tools (true/false)
# Should be 'false' in production
VITE_ENABLE_DEV_TOOLS=true

# Enable React Query DevTools (true/false)
VITE_ENABLE_QUERY_DEVTOOLS=true

# Enable detailed error messages (true/false)
# Should be 'false' in production
VITE_ENABLE_DETAILED_ERRORS=true

# Log level (error, warn, info, debug)
VITE_LOG_LEVEL=info

# Enable console logging (true/false)
# Should be 'false' in production
VITE_ENABLE_CONSOLE_LOGGING=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Enable service worker (true/false)
VITE_ENABLE_SERVICE_WORKER=true

# Cache duration in seconds (default: 5 minutes)
VITE_CACHE_DURATION=300

# Enable lazy loading (true/false)
VITE_ENABLE_LAZY_LOADING=true

# Enable image optimization (true/false)
VITE_ENABLE_IMAGE_OPTIMIZATION=true

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Enable push notifications (true/false)
VITE_ENABLE_PUSH_NOTIFICATIONS=false

# Web push public key (for push notifications)
VITE_WEB_PUSH_PUBLIC_KEY=

# Enable email notifications (true/false)
VITE_ENABLE_EMAIL_NOTIFICATIONS=true

# Default notification duration in milliseconds
VITE_NOTIFICATION_DURATION=4000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Enable Content Security Policy (true/false)
VITE_ENABLE_CSP=true

# Enable HTTPS only (true/false)
# Should be 'true' in production
VITE_HTTPS_ONLY=false

# Enable security headers (true/false)
VITE_ENABLE_SECURITY_HEADERS=true

# Rate limiting - max requests per minute
VITE_RATE_LIMIT=60

# =============================================================================
# TESTING SETTINGS
# =============================================================================

# Enable test data generation (true/false)
# Should be 'false' in production
VITE_ENABLE_TEST_DATA=true

# Number of mock items to generate
VITE_MOCK_DATA_COUNT=100

# Enable accessibility testing (true/false)
VITE_ENABLE_A11Y_TESTING=true

# =============================================================================
# LOCALIZATION SETTINGS
# =============================================================================

# Supported languages (comma-separated)
VITE_SUPPORTED_LANGUAGES=en,zh-TW

# Enable automatic language detection (true/false)
VITE_ENABLE_LANGUAGE_DETECTION=true

# Default currency (USD, EUR, TWD, etc.)
VITE_DEFAULT_CURRENCY=USD

# Enable currency conversion (true/false)
VITE_ENABLE_CURRENCY_CONVERSION=false

# Timezone (default: UTC)
VITE_DEFAULT_TIMEZONE=UTC

# =============================================================================
# BUSINESS LOGIC SETTINGS
# =============================================================================

# Platform fee percentage (0-100)
VITE_DEFAULT_PLATFORM_FEE=10

# Minimum revenue share percentage (0-100)
VITE_MIN_REVENUE_SHARE=5

# Maximum revenue share percentage (0-100)
VITE_MAX_REVENUE_SHARE=50

# Default license duration in days
VITE_DEFAULT_LICENSE_DURATION=365

# Minimum payout amount in USD
VITE_MIN_PAYOUT_AMOUNT=25

# Auto-approval threshold in USD
VITE_AUTO_APPROVAL_THRESHOLD=100

# =============================================================================
# CDN AND ASSET SETTINGS
# =============================================================================

# CDN base URL for static assets
VITE_CDN_URL=https://cdn.imi.infoecos.ai

# Image placeholder service URL
VITE_PLACEHOLDER_IMAGE_URL=https://via.placeholder.com

# Default avatar URL
VITE_DEFAULT_AVATAR_URL=/images/default-avatar.png

# Company logo URL
VITE_LOGO_URL=/images/logo.png

# Favicon URL
VITE_FAVICON_URL=/favicon.ico

# =============================================================================
# SOCIAL MEDIA SETTINGS
# =============================================================================

# Social media links
VITE_SOCIAL_TWITTER=https://twitter.com/m4m-imi
VITE_SOCIAL_FACEBOOK=https://facebook.com/m4m-imi
VITE_SOCIAL_LINKEDIN=https://linkedin.com/company/m4m-imi
VITE_SOCIAL_INSTAGRAM=https://instagram.com/m4m-imi

# Social sharing settings
VITE_ENABLE_SOCIAL_SHARING=true

# =============================================================================
# MARKETING SETTINGS
# =============================================================================

# Enable marketing features (true/false)
VITE_ENABLE_MARKETING=false

# Newsletter signup enabled (true/false)
VITE_ENABLE_NEWSLETTER=true

# Referral program enabled (true/false)
VITE_ENABLE_REFERRALS=false

# Affiliate program enabled (true/false)
VITE_ENABLE_AFFILIATES=false

# =============================================================================
# MAINTENANCE MODE
# =============================================================================

# Enable maintenance mode (true/false)
# When enabled, shows maintenance page to all users
VITE_MAINTENANCE_MODE=false

# Maintenance message
VITE_MAINTENANCE_MESSAGE=We are currently performing scheduled maintenance.

# Maintenance end time (ISO 8601 format)
VITE_MAINTENANCE_END_TIME=